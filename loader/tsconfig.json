{
    "compilerOptions": {
        "lib": [ "esnext", "DOM" ],
        "pretty": true,
        "module": "AMD",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "outFile": "./build/bundle.js"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
